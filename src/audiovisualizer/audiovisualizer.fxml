<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.layout.*?>
<?import audiovisualizer.MVC.controllers.*?>
<?import audiovisualizer.MVC.views.*?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="audiovisualizer.AVCompanion">
   <children>
      <HBox alignment="CENTER" spacing="5.0" style="-fx-background-color: #3a3a3a;">
         <children>
            <Label text="Current song:" textFill="#b90000">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Label>
            <SongLabel fx:id="lblSong" text="*No song selected*" />
         </children>
         <padding>
            <Insets bottom="5.0" top="5.0" />
         </padding>
      </HBox>
       <HBox alignment="CENTER_LEFT" prefHeight="42.0" prefWidth="400.0" spacing="20.0" style="-fx-background-color: #3a3a3a;">
          <children>
              <ButtonFile fx:id="btnFile" mnemonicParsing="false" text="Find file" />
              <ButtonPlay fx:id="btnPlay" mnemonicParsing="false" text="Play" />
          </children>
           <padding>
               <Insets left="10.0" />
           </padding>
       </HBox>
       <Pane fx:id="pane" prefHeight="600.0" prefWidth="1280" VBox.vgrow="ALWAYS" style="-fx-background-color: #3a3a3a;" />
   </children>
</VBox>
